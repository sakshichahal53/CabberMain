<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.cabber.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/profile_picture"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_arrow_back_black_24dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_marginTop="226dp"
                android:layout_marginLeft="340dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:foregroundGravity="right"
                android:background="@drawable/round_button_view" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_create_black_24dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginTop="228dp"
                android:layout_marginLeft="342dp" />
        </RelativeLayout>


        <View
            android:id="@+id/statusBarBackground_profile"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/profile_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:textSize="11sp"
                android:textColor="#8e8e8e"
                android:fontFamily="@font/montserrat_regular"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sachin"
                android:textSize="18sp"
                android:layout_marginTop="9dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:textSize="11sp"
                android:textColor="#8e8e8e"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parekh"
                android:textSize="18sp"
                android:layout_marginTop="9dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="11sp"
                android:textColor="#8e8e8e"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="42dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">


                <TextView
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+919992395691"
                    android:textSize="18sp"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_bold" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:paddingTop="4dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_success_vector_"
                    android:layout_gravity="end" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textSize="11sp"
                android:textColor="#8e8e8e"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="42dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5">


                <TextView
                    android:layout_weight="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="appuser@gmail.com"
                    android:textSize="18sp"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_bold" />

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:paddingTop="4dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_success_vector_"
                    android:layout_gravity="end" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="11sp"
                android:textColor="#8e8e8e"
                android:fontFamily="@font/montserrat_regular"
                android:layout_marginTop="42dp" />

            <EditText
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="appuser@.com"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:layout_marginTop="9dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
