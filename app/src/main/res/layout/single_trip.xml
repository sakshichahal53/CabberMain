<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="13dp"
        android:elevation="10dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_trip"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:src="@drawable/silver_map"
                android:scaleType="fitXY" />

            <LinearLayout
                android:weightSum="2"
                android:id="@+id/layout_cash_time"
                android:layout_below="@+id/img_trip"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="14dp">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_mytrip_time"
                    android:layout_marginLeft="31dp"
                    android:textColor="@color/black"
                    android:text="Today 8:21 am"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_tv_cash_price"
                    android:layout_marginLeft="157dp"
                    android:textColor="@color/black"
                    android:text="$85-$95"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layout_cash_time"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_car_name"
                    android:layout_marginLeft="28dp"
                    android:textColor="#8a8a8a"
                    android:text="Suzuki Swift Desire"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="11sp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="32dp"
                    android:textColor="#8a8a8a"
                    android:text="Cash"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_status"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/black"
                    android:text="Paid"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="11sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>