<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.cabber.activities.HelpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_help"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="HELP"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_choose_issue"
        android:layout_below="@id/toolbar_help"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your issue" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_below="@+id/tv_choose_issue"
        android:elevation="10dp"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_marginTop="23dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Trips and Fare"
            android:textColor="@color/black"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="19dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Any issue regarding your trip and fare" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_below="@+id/card1"
        android:elevation="10dp"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Payment"
            android:textColor="@color/black"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="19dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Problem while paying fare or related issue" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_below="@+id/card2"
        android:elevation="10dp"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="App Usability"
            android:textColor="@color/black"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="19dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Any issue while using our app" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_below="@+id/card3"
        android:elevation="10dp"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true">


        <TextView
            android:id="@+id/tv_trips_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Account"
            android:textColor="@color/black"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/montserrat_bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="19dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Your account info can't change info or change password" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
