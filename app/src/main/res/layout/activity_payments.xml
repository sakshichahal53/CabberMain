<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.cabber.activities.HelpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_payments"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="PAYMENTS"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_payments"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:textSize="11sp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Payment Methods" />

    <android.support.v7.widget.CardView
        android:id="@+id/card5"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_below="@+id/tv_payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/cash"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="27dp" />

            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Cash"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Pay with cash while drive show your amount"
                    android:textSize="8sp"
                    android:layout_marginLeft="2dp" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card6"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_below="@+id/card5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/wallet"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="27dp" />

            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Cards"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Add Credit or Debit Card and pay while booking cab"
                    android:textSize="8sp"
                    android:layout_marginLeft="2dp" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card7"
        android:layout_width="326dp"
        android:layout_height="62dp"
        android:layout_below="@+id/card6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/paytm"
                android:layout_width="26dp"
                android:layout_height="17dp"
                android:layout_marginTop="24dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="27dp" />

            <RelativeLayout
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="PayTm"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Pay Directly from your PayTm Wallet"
                    android:textSize="8sp"
                    android:layout_marginLeft="2dp" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
