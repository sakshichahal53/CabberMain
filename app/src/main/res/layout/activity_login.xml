<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sakshi.cabber.activities.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="SIGN IN"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/toolbar"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/credentials_container"
        android:orientation="vertical"
        android:layout_width="302dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView2">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/input_merged_edittext"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:fontFamily="@font/sansation_regular"
            android:paddingLeft="17.7dp"
            android:paddingStart="17.7dp"
            android:paddingTop="12dp"
            android:text="@string/phone_number"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:inputType="phone"
            android:paddingRight="8dp"
            android:textSize="10sp"
            android:textDirection="rtl" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/input_merged_edittext"
        android:orientation="horizontal"
        android:weightSum="2">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:fontFamily="@font/sansation_regular"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:text="@string/password"
            android:textSize="10sp"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey"
            android:inputType="textPassword"
            android:layoutDirection="rtl"
            android:paddingRight="8dp"
            android:textSize="10sp"
            android:textDirection="rtl" />

    </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_logged_in"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/credentials_container"
        android:background="@drawable/button_background"
        android:letterSpacing="0.1"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="11.7sp"
       />

    <LinearLayout
        android:id="@+id/nav_login_signup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/btn_logged_in"
        android:layout_marginBottom="45dp">

        <TextView
            android:id="@+id/tv_nav_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginRight="85dp"
            android:layout_marginLeft="32dp"
            android:text= "@string/new_user_sign_up"/>

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="11sp"
            android:text="@string/forgot_password"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_above="@+id/socialAuthContainer"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/or_continue_with"
        android:textSize="12sp"
        android:textColor="@color/text_Color"/>

    <LinearLayout
        android:id="@+id/socialAuthContainer"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/input_merged_edittext"
            android:backgroundTint="#2553b4"
            android:drawableLeft="@drawable/com_facebook_button_icon"
            android:fontFamily="@font/montserrat_regular"
            android:paddingLeft="9.3dp"
            android:text="@string/facebook"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:elevation="4dp"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:background="@drawable/input_merged_edittext"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/google"
            android:paddingLeft="9.3dp"
            android:textAllCaps="false"
            android:textColor="#2d2c2c"
            android:elevation="4dp"/>
    </LinearLayout>


</RelativeLayout>
