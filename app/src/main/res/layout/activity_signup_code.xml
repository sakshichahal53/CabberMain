<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupCodeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:text="SIGN UP"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageview12"
        android:layout_width="143dp"
        android:layout_height="143dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:id="@+id/progress_dots_code"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_below="@+id/imageview12"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/active_dot" />


        <View
            android:layout_width="35dp"
            android:layout_height="0.3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/colorAccent" />

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/active_dot" />


        <View
            android:layout_width="35dp"
            android:layout_height="0.3dp"
            android:layout_gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@color/grey" />

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/non_activedot" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_enter_code"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_dots_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="@string/enter_confirmation_code_sent_to_you_on_your_sms"
        android:textAlignment="center"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/ed_code"
        android:layout_below="@id/tv_enter_code"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:background="@drawable/input_merged_edittext"
        android:fontFamily="@font/montserrat_regular"
        android:inputType="number"
        android:layout_marginTop="41dp"
        android:text="568345"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="17sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="302dp"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:layout_below="@id/ed_code"
        android:background="@drawable/button_background"
        android:fontFamily="@font/sansation_bold"
        android:text="@string/next"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
         />

</RelativeLayout>