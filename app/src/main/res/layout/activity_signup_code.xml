<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SignupCodeActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:id="@+id/progress_dots_code"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/active_dot" />


                <View
                    android:layout_width="35dp"
                    android:layout_height="0.3dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorAccent" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/active_dot" />


                <View
                    android:layout_width="35dp"
                    android:layout_height="0.3dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/grey" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/non_activedot" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_enter_code"
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="@string/enter_confirmation_code_sent_to_you_on_your_sms"
                android:textAlignment="center"
                android:textSize="11sp" />

            <EditText
                android:id="@+id/ed_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/input_merged_edittext"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="number"
                android:text="568345"
                android:textAlignment="center"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btn_next_to_card"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>