<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.verbosetech.caber_native_rider.activities.SignupCardActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="144dp"
                android:layout_height="144dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="42dp"
                app:srcCompat="@drawable/logo" />

            <LinearLayout
                android:id="@+id/progress_dots_card"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/active_dot" />


                <View
                    android:layout_width="35dp"
                    android:layout_height="0.3dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorAccent" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/active_dot" />


                <View
                    android:layout_width="35dp"
                    android:layout_height="0.3dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:background="@color/colorAccent" />

                <View
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/active_dot" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_card"
                android:layout_width="262dp"
                android:layout_height="142dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/card_credentials_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="36dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/card_details_container"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/input_merged_edittext"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:paddingTop="16dp"
                        android:text="@string/card_number"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="phone"
                        android:paddingEnd="11dp"
                        android:textColor="#111111"
                        android:textDirection="rtl"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:text="@string/expiry_date"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="number"
                        android:paddingEnd="16dp"
                        android:textColor="#111111"
                        android:textSize="11sp" />


                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingLeft="16dp"
                        android:text="@string/cvv_code"
                        android:textSize="11sp" />

                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:inputType="phone"
                        android:maxLength="3"
                        android:paddingEnd="12dp"
                        android:textColor="#111111"
                        android:textDirection="rtl"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/add_card"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
